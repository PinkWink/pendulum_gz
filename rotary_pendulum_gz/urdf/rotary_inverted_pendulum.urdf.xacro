<?xml version="1.0"?>
<robot name="rotary_inverted_pendulum" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="controllers_file" default=""/>

  <xacro:property name="arm_length" value="0.5"/>
  <xacro:property name="pole_length" value="1.0"/>
  <xacro:property name="rod_radius" value="0.005"/>
  <xacro:property name="pole_initial_deg" value="3.0"/>
  <xacro:property name="pole_initial_rad" value="0.0523598776"/>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0025" iyz="0.0" izz="0.00125"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.1"/>
      </geometry>
      <material name="base_gray">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="arm_link">
    <inertial>
      <origin xyz="0.25 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.00000417" ixy="0.0" ixz="0.0" iyy="0.00416708" iyz="0.0" izz="0.00416708"/>
    </inertial>
    <visual>
      <origin xyz="0.25 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder radius="${rod_radius}" length="${arm_length}"/>
      </geometry>
      <material name="arm_blue">
        <color rgba="0.1 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.25 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder radius="${rod_radius}" length="${arm_length}"/>
      </geometry>
    </collision>
  </link>

  <link name="pole_link">
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.01250094" ixy="0.0" ixz="0.0" iyy="0.01250094" iyz="0.0" izz="0.00000188"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${rod_radius}" length="${pole_length}"/>
      </geometry>
      <material name="pole_red">
        <color rgba="0.85 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${rod_radius}" length="${pole_length}"/>
      </geometry>
    </collision>
  </link>

  <joint name="arm_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.283185307" upper="6.283185307" effort="10.0" velocity="20.0"/>
    <dynamics damping="0.02" friction="0.0"/>
  </joint>

  <joint name="pole_joint" type="revolute">
    <parent link="arm_link"/>
    <child link="pole_link"/>
    <origin xyz="0.5 0 0" rpy="0 ${pole_initial_rad} 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14159265359" upper="3.14159265359" effort="10.0" velocity="20.0"/>
    <dynamics damping="0.002" friction="0.0"/>
  </joint>

  <ros2_control name="GazeboSimSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <joint name="arm_joint">
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <joint name="pole_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(arg controllers_file)</parameters>
    </plugin>
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>/world/default/model/rotary_inverted_pendulum/joint_state</topic>
    </plugin>
  </gazebo>
</robot>
